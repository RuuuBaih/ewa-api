  .row
    .col-md-6
      .row
        form role="form" action="restaurant/pick" method='POST' id='filter-form'
          .form-group
            .row
            
            .row      
              - 9.times do |num|
                .col-md-4.col-sm-6
                  button class="btn bg-transparent" name="img_num" type="submit" value="#{pick_9rests[num].id}" 
